<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs">
    <reference id="viewFacade" interface="ru.training.karaf.view.ViewFacade"/>
    <!--<reference id="userView" interface="ru.training.karaf.view.UserView"/>
    <reference id="unitView" interface="ru.training.karaf.view.UnitView"/>
    <reference id="locationView" interface="ru.training.karaf.view.LocationView"/>
    <reference id="paramView" interface="ru.training.karaf.view.ClimateParameterView"/>
    <reference id="typeView" interface="ru.training.karaf.view.SensorTypeView"/>
    <reference id="sensorView" interface="ru.training.karaf.view.SensorView"/>
    <reference id="measuringView" interface="ru.training.karaf.view.MeasuringView"/>
    <reference id="roleView" interface="ru.training.karaf.view.RoleView"/>-->
    <!--<reference id="passwordService" interface="ru.training.karaf.rest.auth.AuthPassService"/>-->

    <bean id="userRestServiceBean" class="ru.training.karaf.rest.UserRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
        <property name="passwordService" ref="passwordService"/>
    </bean>
    <bean id="locationRestServiceBean" class="ru.training.karaf.rest.LocationRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>
    <bean id="unitRestServiceBean" class="ru.training.karaf.rest.UnitRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>
    <bean id="paramRestServiceBeen" class="ru.training.karaf.rest.ClimateParameterRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>
    <bean id="typeRestServiceBeen" class="ru.training.karaf.rest.SensorTypeRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>
    <bean id="sensorRestServiceBeen" class="ru.training.karaf.rest.SensorRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>
    <bean id="measuringRestServiceBeen" class="ru.training.karaf.rest.MeasuringRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>
    <bean id="roleRestServiceBeen" class="ru.training.karaf.rest.RoleRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>

    <!--auth-->
    <bean id = "passwordService" class = "ru.training.karaf.rest.auth.AuthPassService"/>
    <bean id="authRestServiceBeen" class="ru.training.karaf.rest.AuthRestServiceImpl">
        <property name="viewFacade" ref="viewFacade"/>
    </bean>

    <!-- -->

    <bean id="validationProviderResolver"
          class="ru.training.karaf.rest.validation.HibernateValidationProviderResolver"/>

    <bean id="beanValidationProvider" class="org.apache.cxf.validation.BeanValidationProvider">
        <argument ref="validationProviderResolver"/>
    </bean>

    <bean id="jaxrsValidationFeature" class="org.apache.cxf.validation.BeanValidationFeature">
        <property name="provider" ref="beanValidationProvider"/>
    </bean>

    <!--<bean id="exceptionMapper" class="org.apache.cxf.jaxrs.validation.ValidationExceptionMapper"/>-->
    <bean id="exceptionMapper" class="ru.training.karaf.rest.validation.ValidationExceptionMapperWithMassages"/>



    <!-- CXF -->
    <jaxrs:server id="restServer" address="/rest">
        <jaxrs:serviceBeans>
            <ref component-id="userRestServiceBean"/>
            <ref component-id="locationRestServiceBean"/>
            <ref component-id="unitRestServiceBean"/>
            <ref component-id="paramRestServiceBeen"/>
            <ref component-id="typeRestServiceBeen"/>
            <ref component-id="sensorRestServiceBeen"/>
            <ref component-id="measuringRestServiceBeen"/>
            <ref component-id="roleRestServiceBeen"/>
            <ref component-id="authRestServiceBeen"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider"/>
            <bean class="org.apache.cxf.jaxrs.impl.WebApplicationExceptionMapper"/>
            <bean class="ru.training.karaf.rest.validation.UnknownAccountExceptionMapper"/>
            <bean class="ru.training.karaf.rest.validation.RestrictedExceptionMapper"/>
            <ref component-id="exceptionMapper"/>
        </jaxrs:providers>
        <jaxrs:features>
            <ref component-id="jaxrsValidationFeature"/>
        </jaxrs:features>

    </jaxrs:server>
</blueprint>
