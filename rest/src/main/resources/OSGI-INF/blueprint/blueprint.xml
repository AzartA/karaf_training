<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs">
    <reference id="userRepo" interface="ru.training.karaf.repo.UserRepo"/>
    <reference id="unitRepo" interface="ru.training.karaf.repo.UnitRepo"/>
    <reference id="locationRepo" interface="ru.training.karaf.repo.LocationRepo"/>
    <reference id="paramRepo" interface="ru.training.karaf.repo.ClimateParameterRepo"/>
    <reference id="typeRepo" interface="ru.training.karaf.repo.SensorTypeRepo"/>
    <reference id="sensorRepo" interface="ru.training.karaf.repo.SensorRepo"/>

    <reference id="uniqueValidationRepo" interface="ru.training.karaf.repo.UniqueValidationRepo"/>

    <bean id="userRestServiceBean" class="ru.training.karaf.rest.UserRestServiceImpl">
        <property name="repo" ref="userRepo"/>
    </bean>
    <bean id="locationRestServiceBean" class="ru.training.karaf.rest.LocationRestServiceImpl">
        <property name="repo" ref="locationRepo"/>
    </bean>
    <bean id="unitRestServiceBean" class="ru.training.karaf.rest.UnitRestServiceImpl">
        <property name="repo" ref="unitRepo"/>
    </bean>
    <bean id="paramRestServiceBeen" class="ru.training.karaf.rest.ClimateParameterRestServiceImpl">
        <property name="repo" ref="paramRepo"/>
    </bean>
    <bean id="typeRestServiceBeen" class="ru.training.karaf.rest.SensorTypeRestServiceImpl">
        <property name="repo" ref="typeRepo"/>
    </bean>
    <bean id="sensorRestServiceBeen" class="ru.training.karaf.rest.SensorRestServiceImpl">
        <property name="repo" ref="sensorRepo"/>
    </bean>

    <bean id="uniqueKeyValidatorBean" activation="lazy" class="ru.training.karaf.rest.validation.UniqueKeyValidatorImpl">
        <property name="repo" ref="uniqueValidationRepo"/>
    </bean>

    <bean id="validationProviderResolver"
          class="ru.training.karaf.rest.validation.HibernateValidationProviderResolver"/>

    <bean id="beanValidationProvider" class="org.apache.cxf.validation.BeanValidationProvider">
        <argument ref="validationProviderResolver"/>
    </bean>

    <bean id="jaxrsValidationFeature" class="org.apache.cxf.validation.BeanValidationFeature">
        <property name="provider" ref="beanValidationProvider"/>
    </bean>

    <!--<bean id="exceptionMapper" class="org.apache.cxf.jaxrs.validation.ValidationExceptionMapper"/>-->
    <bean id="exceptionMapper" class="ru.training.karaf.rest.validation.ValidationExceptionMapperWithMassages"/>


    <!-- CXF -->
    <jaxrs:server id="restServer" address="/rest">
        <jaxrs:serviceBeans>
            <ref component-id="userRestServiceBean"/>
            <ref component-id="locationRestServiceBean"/>
            <ref component-id="unitRestServiceBean"/>
            <ref component-id="paramRestServiceBeen"/>
            <ref component-id="typeRestServiceBeen"/>
            <ref component-id="sensorRestServiceBeen"/>
            <!--<ref component-id="uniqueKeyValidatorBean"/>-->
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider"/>
            <bean class="org.apache.cxf.jaxrs.impl.WebApplicationExceptionMapper"/>
            <ref component-id="exceptionMapper"/>
        </jaxrs:providers>
        <jaxrs:features>
            <ref component-id="jaxrsValidationFeature"/>
        </jaxrs:features>

    </jaxrs:server>
</blueprint>
